{
  "manifest_version": 3,
  "name": "艺爪图片下载器",
  "version": "1.0",
  "description": "智能提取网页图片并批量下载",
  "icons": {
    "16": "icons/logo128.png",
    "48": "icons/logo128.png",
    "128": "icons/logo512.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/logo128.png",
      "48": "icons/logo128.png",
      "128": "icons/logo512.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  }
}